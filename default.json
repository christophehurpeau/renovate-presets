{
  "prConcurrentLimit": 10,
  "dependencyDashboard": true,
  "dependencyDashboardApproval": false,
  "recreateClosed": true,
  "postUpdateOptions": ["yarnDedupeFewer", "yarnDedupeHighest"],
  "labels": [":vertical_traffic_light: automerge"],
  "assignees": ["christophehurpeau"],
  "lockFileMaintenance": {
    "enabled": false
  },
  "stabilityDays": 4,
  "internalChecksFilter": "strict",
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "rangeStrategy": "bump"
    },
    {
      "matchDatasources": ["node-version"],
      "enabled": false,
      "schedule": ["* * 1 */3 *"]
    },
    {
      "matchPackageNames": ["node"],
      "enabled": false,
      "schedule": ["* * 1 */6 *"],
      "rangeStrategy": "replace",
      "dependencyDashboardApproval": true
    },
    {
      "matchDepTypes": ["dependencies", "peerDependencies"],
      "matchUpdateTypes": ["major", "minor"],
      "semanticCommitType": "feat"
    },
    {
      "matchDepTypes": ["dependencies", "peerDependencies"],
      "matchUpdateTypes": ["patch"],
      "semanticCommitType": "fix",
      "matchPackageNames": [
        "@playwright/test",
        "@pob/esbuild",
        "@pob/rollup-esbuild",
        "@pob/rollup-typescript",
        "@swc-node/register",
        "@swc/core",
        "@swc/jest",
        "@vitest/coverage-v8",
        "alp-rollup-plugin-config",
        "check-package-dependencies",
        "pinst",
        "pob-babel",
        "rollup",
        "tslib",
        "vitest"
      ]
    },
    {
      "groupName": "Pob Dependencies",
      "matchPackageNames": [
        "alp-rollup-plugin-config",
        "pob-babel",
        "@pob/rollup-*"
      ],
      "schedule": ["before 3am on Friday"]
    },
    {
      "matchUpdateTypes": ["major"],
      "schedule": ["before 3am on Friday"],
      "matchPackageNames": ["eslint", "@typescript-eslint/*", "eslint-*"]
    },
    {
      "stabilityDays": 0,
      "matchPackageNames": [
        "check-package-dependencies",
        "eslint",
        "prettier",
        "rollup",
        "semver",
        "typedoc",
        "repository-check-dirty",
        "standard-version",
        "jest",
        "jest-junit-reporter",
        "@pob/eslint-config*",
        "@typescript-eslint/*",
        "eslint-*",
        "@babel/*",
        "@pob/*",
        "pob-*",
        "babel-*",
        "@types/*",
        "@rollup*/"
      ],
      "matchUpdateTypes": ["patch", "minor"],
      "addLabels": [":white_check_mark: bot approval"],
      "schedule": ["at any time"]
    },
    {
      "stabilityDays": 0,
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["patch"],
      "addLabels": [":white_check_mark: bot approval"],
      "schedule": ["at any time"]
    },
    {
      "stabilityDays": 7,
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["minor"],
      "addLabels": [":white_check_mark: bot approval"],
      "schedule": ["at any time"]
    },
    {
      "groupName": "@pob eslint configs",
      "stabilityDays": 0,
      "matchPackageNames": ["@pob/eslint-config*"]
    },
    {
      "groupName": "nightingale",
      "description": "nightingale monorepo",
      "stabilityDays": 0,
      "matchSourceUrls": [
        "https://github.com/christophehurpeau/nightingale{/,}**"
      ]
    },
    {
      "groupName": "alp",
      "description": "alp monorepo",
      "stabilityDays": 0,
      "matchSourceUrls": ["https://github.com/christophehurpeau/alp{/,}**"]
    },
    {
      "groupName": "liwi",
      "description": "liwi monorepo",
      "stabilityDays": 0,
      "matchSourceUrls": ["https://github.com/liwijs/liwi{/,}**"]
    },
    {
      "groupName": "tamagui",
      "description": "tamagui monorepo",
      "matchPackageNames": ["tamagui", "@tamagui/*"]
    },
    {
      "groupName": "alouette",
      "description": "alouette monorepo",
      "matchPackageNames": ["alouette", "alouette-icons"]
    },
    {
      "groupName": "pob root",
      "description": "pob root",
      "matchPackageNames": ["@pob/root", "@pob/lerna-light"],
      "stabilityDays": 1,
      "schedule": ["at any time"]
    },
    {
      "matchPackageNames": ["yarn"],
      "stabilityDays": 1,
      "matchUpdateTypes": ["patch", "minor"],
      "schedule": ["at any time"]
    },
    {
      "matchPackageNames": ["@pob/root", "@pob/lerna-light", "yarn"],
      "matchUpdateTypes": ["patch", "minor"],
      "stabilityDays": 0,
      "addLabels": [":white_check_mark: bot approval"]
    },
    {
      "matchUpdateTypes": ["pin"],
      "addLabels": [":white_check_mark: bot approval"],
      "schedule": ["at any time"]
    }
  ]
}
